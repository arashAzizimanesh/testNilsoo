<?xml version="1.0" encoding="utf-8"?>

<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:layout_height="wrap_content">
        <android.support.v7.widget.RecyclerView android:id="@+id/category_recycler" android:layout_width="match_parent"
                                                android:layout_height="wrap_content"/>


        <android.support.v7.widget.CardView

                app:cardCornerRadius="5dp"
                android:layout_width="match_parent"

                android:layout_margin="8dp"
                android:layout_height="80dp">

            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:layout_height="match_parent">

                <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent"
                                android:layout_weight="1
">

                    <ImageView
                            android:layout_margin="@dimen/margin_img"
                            android:src="@mipmap/warranty"

                            android:layout_centerHorizontal="true"
                            android:id="@+id/img_original_warranty"
                            android:layout_width="@dimen/img_hedear_size"
                            android:layout_height="@dimen/img_hedear_size"/>

                    <TextView
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/colorPrimary"
                            android:text="گارانتی اصالت"
                            android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:layout_below="@+id/img_original_warranty"/>
                </RelativeLayout>

                <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent"
                                android:layout_weight="1">

                    <ImageView
                            android:layout_margin="@dimen/margin_img"

                            android:src="@mipmap/back_product"
                            android:layout_centerHorizontal="true"
                            android:id="@+id/img_back_product"
                            android:layout_width="@dimen/img_hedear_size"
                            android:layout_height="@dimen/img_hedear_size"/>

                    <TextView
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/colorPrimary"
                            android:text="بازگشت کالا"
                            android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:layout_below="@+id/img_back_product"/>
                </RelativeLayout>

                <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent"
                                android:layout_weight="1
">

                    <ImageView
                            android:layout_margin="@dimen/margin_img"

                            android:src="@mipmap/support"
                            android:layout_centerHorizontal="true"
                            android:id="@+id/img_support"
                            android:layout_width="@dimen/img_hedear_size"
                            android:layout_height="@dimen/img_hedear_size"/>

                    <TextView
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/colorPrimary"
                            android:text="بازگشت کالا"
                            android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:layout_below="@+id/img_support"/>
                </RelativeLayout>

                <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent"
                                android:layout_weight="1
">

                    <ImageView
                            android:layout_margin="@dimen/margin_img"

                            android:src="@mipmap/delivery"
                            android:layout_centerHorizontal="true"
                            android:id="@+id/img_delivery"
                            android:layout_width="@dimen/img_hedear_size"
                            android:layout_height="@dimen/img_hedear_size"/>

                    <TextView
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/colorPrimary"
                            android:text="بازگشت کالا"
                            android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:layout_below="@+id/img_delivery"/>
                </RelativeLayout>


            </LinearLayout>


        </android.support.v7.widget.CardView>


    </LinearLayout>
</layout>